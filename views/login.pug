extends base

block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg.max__width Log into your account
            form.form_login
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green.max__width Login
            .form__group
                a.secondary_btn.max__width(href="/forgotPassword") Forgot password
            .form__group
                p.cta__text.max__width Don't have an account?   
                    a(href='/signup') Sign up